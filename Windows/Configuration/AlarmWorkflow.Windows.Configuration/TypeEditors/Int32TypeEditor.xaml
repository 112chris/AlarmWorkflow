<UserControl x:Class="AlarmWorkflow.Windows.Configuration.TypeEditors.Int32TypeEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:v="clr-namespace:AlarmWorkflow.Windows.Configuration.Validation">
    <TextBox>
        <TextBox.Text>
            <Binding Path="Value">
                <Binding.ValidationRules>
                    <v:Int32ValidationRule />
                </Binding.ValidationRules>
            </Binding>
        </TextBox.Text>
    </TextBox>
</UserControl>
