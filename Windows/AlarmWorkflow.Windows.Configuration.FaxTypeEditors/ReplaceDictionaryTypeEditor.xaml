<UserControl x:Class="AlarmWorkflow.Windows.Configuration.FaxTypeEditors.ReplaceDictionaryTypeEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <DataGrid AutoGenerateColumns="False" ItemsSource="{Binding ReplaceDictionary}" CanUserAddRows="True" CanUserDeleteRows="True">
        <DataGrid.Columns>
            <DataGridTextColumn Binding="{Binding Key}" Header="Ursprungstext" Width="*" />
            <DataGridTextColumn Binding="{Binding Value}" Header="Neuer Text" Width="*" />
        </DataGrid.Columns>        
    </DataGrid>
</UserControl>
