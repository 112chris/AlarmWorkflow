<UserControl x:Class="AlarmWorkflow.Windows.Configuration.TypeEditors.FileTypeEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        
        <TextBox x:Name="txtValue" Grid.Column="0" Margin="1" />
        
        <Button Grid.Column="1" Margin="1" MinWidth="25" Content="..." Click="Browse_Click" ToolTip="Durchsuchen..." />
        
    </Grid>
</UserControl>
