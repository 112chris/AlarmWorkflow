<?xml version="1.0" encoding="utf-8" ?>
<AlarmWorkflow>
  <OperationStore>SQLCEDatabaseOperationStore</OperationStore>
  <RoutePlanProvider>GoogleMapsProvider</RoutePlanProvider>
  
  <!-- This section configures YOUR fire department site :) 
       This information is needed for some jobs and some tasks.
  -->
  <FDInformation>
    <Name>The name of your Fire Department</Name>
    <City>Musterstadt</City>
    <ZipCode>12345</ZipCode>
    <Street>Musterstraße</Street>
    <StreetNumber>1a</StreetNumber>
  </FDInformation>

  <!-- Whether or not to download the route plan when parsing a new operation (suggested = True)-->
  <DownloadRoutePlan>True</DownloadRoutePlan>
  <!-- Defines the size of the route image -->
  <RouteImageHeight>800</RouteImageHeight>
  <RouteImageWidth>800</RouteImageWidth>

  <!-- This section states which jobs are enabled and can be used.
       You should manually add and enable only those you need.
  -->
  <JobsConfiguration>
    <Job Name="DisplayWakeUpJob" IsEnabled="False" />
    <Job Name="MailingJob" IsEnabled="False" />
    <Job Name="MySqlDatabaseJob" IsEnabled="False" />
    <Job Name="SmsJob" IsEnabled="False" />
    <Job Name="DisplayWakeUpJob" IsEnabled="False" />
    <Job Name="SQLCEDatabaseJob" IsEnabled="True" />
    <Job Name="ProwlJob" IsEnabled="False" />
  </JobsConfiguration>
  
  <!-- This section states which alarm sources are enabled and can be used.
       You should manually add and enable only those you need.
  -->
  <AlarmSourcesConfiguration>
    <AlarmSource Name="FaxAlarmSource" IsEnabled="True" />
  </AlarmSourcesConfiguration>

</AlarmWorkflow>